rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write everything (for now)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for class covers (more secure)
    match /class-covers/{imageId} {
      allow read: if true; // Public read for class images
      allow write: if request.auth != null; // Only auth users upload
    }
  }
}
