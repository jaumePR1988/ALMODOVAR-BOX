rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNCIONES DE AYUDA ---
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'admin@almodovarbox.com' || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'director'))
      );
    }

    function isCoach() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coach';
    }

    // --- REGLAS ---

    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin() || isCoach());
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }

    match /classes/{classId} { 
      allow read: if request.auth != null; 
      allow write: if isAdmin() || isCoach(); 
    }
    
    match /bookings/{bookingId} { 
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin() || isCoach());
    }
    
    match /benchmarks/{benchmarkId} { 
      allow read: if request.auth != null; 
      allow write: if isAdmin() || isCoach(); 
    }
    
    match /benchmark_logs/{logId} { 
      allow read, write: if request.auth != null; 
    }
    
    match /notifications/{notificationId} { 
      allow read, write: if request.auth != null; 
    }

    // Reglas para Coaches
    match /coaches/{coachId} {
      allow read: if true; 
      allow write: if isAdmin(); 
    }

    // Reglas para Grupos (NUEVO)
    match /groups/{groupId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
